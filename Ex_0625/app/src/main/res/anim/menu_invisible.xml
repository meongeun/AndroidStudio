<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:fillAfter="true"><!-- 애니메이션이 완료되면 처음상태로 돌아가지 않고, 마지막 상태를 유지 -->
    <!-- set은 여러개의 속성(alpha, translate, rotation)을 하나로 묶어서 관리하는 영역 -->

    <!-- 메뉴를 숨기는 애니메이션 -->
    <!-- alpha(투명도)
         fromAlpha : 시작 알파값. 1.0이면 완전 불투명
         toAlpha : 끝 알파값. 0.0이면 완전 투명
         duration : 애니메이션 진행시간-->
    <alpha android:fromAlpha="1.0"
           android:toAlpha="0.0"
           android:duration="500"/>

    <!-- translate( 위치 )
        fromXDelta : 시작 x좌표
        fromYDelta : 시작 y좌표
        toXDelta : 끝 x좌표
        toYDelta : 끝 y좌표
        duration : 애니메이션 진행 시간-->
    <translate android:fromXDelta="0%p"
                android:fromYDelta="0%p"
                android:toXDelta="-100%p"
                android:toYDelta="0%p"
                android:duration="500"/>

</set>








































