<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- rotate(회전)
         fromDegress : 시작 회전각
         toDegress : 최종 회전각
         pivotX : 중심x
         pivotY : 중심y-->
    <rotate android:fromDegrees="0"
            android:toDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%"
            android:duration="500"/>

</set>